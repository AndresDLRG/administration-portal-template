<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration scan="true" scanPeriod="30 seconds"
	packagingData="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %class{0} - %msg%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>

	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>../logs/trace.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- hourly rollover -->
			<fileNamePattern>../logs/trace.%d{yyyy-MM-dd-HH}.log</fileNamePattern>
			<!-- keep 60 days' worth of history capped at 3GB total size -->
			<maxHistory>60</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %class{0} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.springframework" level="debug" />
	<logger name="org.springframework.web.servlet.mvc" level="debug" />
	<logger name="org.springframework.beans.factory.support" level="info" />
	<logger name="org.apache" level="warn" />
	<logger name="org.hibernate" level="warn" />
	<logger name="com.mchange" level="warn" />


	<root level="info">
		<appender-ref ref="STDOUT" />
		<!-- <appender-ref ref="FILE" /> -->
	</root>
</configuration>